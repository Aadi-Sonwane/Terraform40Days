{
  "name": "terraform-codespace-by-aadi",
  // Use the official GitHub-provided Ubuntu image directly
  "image": "ghcr.io/devcontainers/base:ubuntu-latest",

  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {}
  },

  "remoteEnv": {
    "AWS_ACCESS_KEY_ID": "${{ secrets.AWS_ACCESS_KEY_ID }}",
    "AWS_SECRET_ACCESS_KEY": "${{ secrets.AWS_SECRET_ACCESS_KEY }}",
    "AWS_REGION": "${{ secrets.AWS_REGION }}"
  },

  "postCreateCommand": "echo 'Terraform and AWS CLI are ready!'",

  "customizations": {
    "vscode": {
      "extensions": [
        "HashiCorp.terraform"
      ]
    }
  }
}
